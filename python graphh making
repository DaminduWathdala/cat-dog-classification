#create a graph

import matplotlib.pyplot as plt
import numpy as np
plt.plot([1,2,3,4],np.power([1,2,3,4],2),'ks:',linewidth = 5)
plt.xlabel("X axis")
plt.ylabel("Y axis")
plt.title("Hello world")
plt.show()

####3
x = [1,2,3,4]
plt.plot(x,np.power(x,2),'ks:', x,np.power(x,3),'ks:')
plt.show()

####add a limit
plt.plot([1,2,3,4],[5,6,7,8])
left,right = plt.xlim(2,4)
bottom,top = plt.ylim(6,8)
print(left,right)
print(bottom,top)
plt.show()
